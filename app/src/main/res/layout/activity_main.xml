<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:textSize="48sp"
        android:text="@string/calc_text"
        android:gravity="end|bottom"
        android:background="@color/lightGray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn1Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
        <Button
            android:id="@+id/btn2Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_2"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btn3Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_3"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btnDividePicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Divide"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn4Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_4"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
        <Button
            android:id="@+id/btn5Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_5"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btn6Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_6"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btnMultiplyPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/multiply"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn7Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_7"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btn8Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_8"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btn9Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_9"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btnDifferencePicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btn0Picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/_0"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btnCLRPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clr"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />
        <Button
            android:id="@+id/btnADDPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/add"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"
            />

        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnEQPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/result"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Gray2"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml"
            />
        ></LinearLayout>

</LinearLayout>